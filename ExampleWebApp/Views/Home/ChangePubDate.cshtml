@model ServiceLayer.BookServices.ChangePubDateDto
@{
    ViewBag.Title = "title";
}

<h2>Change Publication Date</h2>
<div class="form-horizontal">
    <form method="post">
        @Html.ValidationSummary(false, null, new { @class = "text-danger h4" })
        <!-- Input and Submit elements -->
        <input name="BookId" type="hidden" value="@Model.BookId"/>
        @*We need these in case where there is an error and we need to reshow the data again*@
        <input name="Title" type="hidden" value="@Model.Title" />

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Book Title</label>
            </div>
            <div class="col-sm-10">
                @Model.Title
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Publication Date</label>
            </div>
            <input asp-for="PublishedOn" class="form-control col-sm-10"/>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit">Update</button>
            </div>
        </div>

    </form>
</div>