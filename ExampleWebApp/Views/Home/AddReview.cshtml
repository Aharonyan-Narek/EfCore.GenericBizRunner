
@model ServiceLayer.BookServices.AddReviewDto



<h2>Add a book review</h2>

<div class="form-horizontal">
    <form method="post">
        <!-- Input and Submit elements -->
        <input name="BookId" type="hidden" value="@Model.BookId" />

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Book Title</label>
            </div>
            <div class="col-sm-10">
                @ViewData["Title"]
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">YourName</label>
            </div>
            <input asp-for="VoterName" class="form-control col-sm-10" />
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Grade (0 to 5)</label>
            </div>
            <input asp-for="NumStars" min="0" max="5" class="form-control col-sm-10" />
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Your comment</label>
            </div>
            <textarea asp-for="Comment" class="form-control col-sm-10"></textarea>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit">Add</button>
            </div>
        </div>

    </form>
</div>