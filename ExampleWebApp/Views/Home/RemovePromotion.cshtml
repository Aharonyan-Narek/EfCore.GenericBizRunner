@using System.Globalization
@model ServiceLayer.BookServices.AddRemovePromotionDto



<h2>Remove Promotion</h2>

<div class="form-horizontal">
    <form method="post">
        <!-- Input and Submit elements -->
        <input name="BookId" type="hidden" value="@Model.BookId" />
        
        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Book Title</label>
            </div>
            <div class="col-sm-10">
                @Model.Title
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Org Price</label>
            </div>
            <div class="col-sm-10">
                @(Model.OrgPrice < 0 ? "Not for sale" : Model.OrgPrice.ToString("c", new CultureInfo("en-US")))
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Actual Price</label>
            </div>
            <div class="col-sm-10">
                @(Model.ActualPrice < 0 ? "Not for sale" : Model.ActualPrice.ToString("c", new CultureInfo("en-US")))
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-2">
                <label class="control-label">Promotional Text</label>
            </div>
            <div class="col-sm-10">
                @Model.PromotionalText
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit">Remove</button>
            </div>
        </div>

    </form>
</div>